{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Happiness Level of All Countries in 2019",
    "width": 800,
    "height": 600,
    "data": {
      "url": "data/happiness_2019.csv",
      "format": {
            "type": "topojson",
            "feature": "world.topojson"
          }
    },
    "transform": [{
        "lookup": "properties.name",
        "from": {
          "data": {
            "url": "data/happiness_2019.csv"
          },
          "key": "Country or region",
          "fields": ["Score"]
        }
      },
      {"calculate": "datum.Score + 0.1", "as": "Score"}
    ],
    "projection": {
      "type": "equirectangular"
    },
    "mark": {
      "type": "geoshape"
      },
    "encoding": {
      "color": {
        "field": "Score",
        "type": "quantitative"
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "Score", "type": "quantitative"}
      ]
    }
  }